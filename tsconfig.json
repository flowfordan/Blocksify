{
  "compilerOptions": {
    "target": "es5",
    "plugins": [{
      "name": "next"
    }],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "jsx": "preserve",
    "noEmit": true,    
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/entities/*": [ "entities/*" ],
      "@/entities": [ "entities" ]
    },

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "src",
    "src/custom.d.ts",
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
