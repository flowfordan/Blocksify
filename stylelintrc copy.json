{
	"extends": [
		"stylelint-config-standard",
		"stylelint-order-config-standard",
    
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss"
	],
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"string-quotes": "single",
		"indentation": [
			"tab"
		],
		"color-hex-case": "upper"
	}
}